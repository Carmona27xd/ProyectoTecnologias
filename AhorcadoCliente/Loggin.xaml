<Window x:Class="AhorcadoCliente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AhorcadoCliente"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtCorreo" HorizontalAlignment="Center" Margin="0,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label Content="Correo" HorizontalAlignment="Left" Margin="239,161,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="232,230,0,0" VerticalAlignment="Top"/>
        <Button Content="Iniciar sesion" HorizontalAlignment="Center" Margin="0,294,0,0" VerticalAlignment="Top" Width="96" Click="Button_IniciarSesion"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,234,0,0" VerticalAlignment="Top" Width="160"/>
        <Label Content="Aun no tienes una cuenta? " HorizontalAlignment="Left" Margin="232,370,0,0" VerticalAlignment="Top"/>
        <Button Content="Registrate aqui" HorizontalAlignment="Left" Margin="400,373,0,0" VerticalAlignment="Top" Width="110" Click="Button_Registrarse"/>

    </Grid>
</Window>
